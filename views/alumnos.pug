extends layout

block content
    h1 Lista de Alumnos
    table
        thead
            tr
                th DNI
                th Nombre
                th Apellido
                th Email
                th Telefono
            tbody
                each alumno in alumnos
                    tr
                    td= alumno.dni
                    td= alumno.nombre
                    td= alumno.apellido
                    td= alumno.email 
                    td= alumno.telefono
                    td
                        a(href=`/alumnos-edit/${alumno.id}`) Editar
                        span |
                        a(href=`/alumnos-delete/${alumno.id}`) Eliminar
    p
    a(href='/alumnos-add') Agregar Nuevo Alumno